include ../base/head
include ../base/navbar
include ../base/footer
doctype html
html
  head
    +head('sign up', 'sign-up.css')
  body
    +navbar
    form.main(method='post', action='/')
      h2 create a new account
      button
        img(src="./assets/icons/facebook.jpg" alt='facebook')
        |continue with <strong>Facebook</strong>
      button
        img(src="./assets/icons/google.jpg" alt='google')
        |continue with <strong>Google</strong>
      hr
      span Or
      div.name
        input(type='text' name='first_name' placeholder='first name')
        input(type='text' name='last_name' placeholder='last name')
      input(type='text' name='username' placeholder='username')
      input(type='email' name='email' placeholder='email')
      input(type='password' name='password' placeholder='password')
      span password must be at least 8 characters long.
      input(type='submit' value='sign up')
      span already a member? 
        a(href="./sign-in.html") sign in
      hr
    +footer